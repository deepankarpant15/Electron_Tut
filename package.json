{
  "name": "readease",
  "private": true,
  "version": "1.0.0",
  "description": "A modern desktop book reader application supporting EPUB and PDF formats",
  "author": "ReadEase Team",
  "license": "MIT",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "package": "npm run build && electron-builder",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "dist:all": "npm run dist:mac && npm run dist:win && npm run dist:linux"
  },
  "dependencies": {
    "@types/pdfjs-dist": "^2.10.377",
    "autoprefixer": "^10.4.21",
    "electron-store": "^8.1.0",
    "epub": "^1.3.0",
    "epubjs": "^0.3.93",
    "framer-motion": "^11.18.2",
    "jszip": "^3.10.1",
    "mjs": "^1.0.0",
    "os-utils": "^0.0.14",
    "pdfjs-dist": "^4.10.38",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-pageflip": "^2.0.3",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.readease.app",
    "productName": "ReadEase",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist-react/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
